<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutAlert"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="10dp" >

    <ImageView
        android:id="@+id/alert_image"
        android:layout_width="224dp"
        android:layout_height="224dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_alert_image" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/alert_image"
        android:layout_toStartOf="@+id/alert_type"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:contentDescription="alert_type_icon"
        android:src="@drawable/ic_alert_24dp"/>

    <TextView
        android:id="@+id/alert_type"
        android:layout_below="@+id/alert_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/alert_time"
        android:layout_below="@+id/alert_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/alert_emergency_call"
        android:layout_below="@+id/alert_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_phone_24dp"
        android:drawablePadding="8dp"
        android:background="@drawable/background_alert_emergency_call"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:text="Emergency Call"
        android:textColor="@android:color/white"
        android:textSize="15sp" />

</RelativeLayout>